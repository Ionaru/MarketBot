{
    "name": "market-bot",
    "private": true,
    "author": "Jeroen Akkerman",
    "version": "2.2.0",
    "description": "A Discord bot for looking up EVE Online market prices",
    "repository": {
        "type": "git",
        "url": "https://github.com/Ionaru/MarketBot.git"
    },
    "scripts": {
        "build": "tsc --skipLibCheck --project tsconfig.json",
        "lint": "npm run lint:src && npm run lint:test",
        "lint:src": "tslint --project tsconfig.json -c tslint.json --format stylish",
        "lint:test": "tslint -c tslint.json src/**/*.spec.ts --format stylish",
        "pretest": "npm run lint",
        "test": "jest src",
        "posttest": "codecov -f coverage/*.json",
        "start": "npm run build && node dist/index.js",
        "start:ts": "TS_NODE_FILES=true node --require ts-node/register src/index.ts"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/*.spec.ts",
            "!dist/**/*"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "dependencies": {
        "@ionaru/configurator": "^1.0.0",
        "@ionaru/format-number": "^1.0.1",
        "@sentry/node": "^5.0.5",
        "axios": "^0.18.0",
        "countdown": "^2.6.0",
        "d3": "^5.9.1",
        "d3-node": "^2.1.0",
        "discord.js": "^11.4.2",
        "elastic-apm-node": "^2.8.0",
        "escape-string-regexp": "^1.0.5",
        "fuse.js": "^3.4.4",
        "http-status-codes": "^1.3.1",
        "js-yaml": "^3.13.0",
        "moment": "^2.24.0",
        "node-fetch": "^2.3.0",
        "puppeteer": "^1.14.0",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "^4.0.6",
        "typeorm": "^0.2.16",
        "typescript": "^3.4.1",
        "winston-pnp-logger": "^1.0.5"
    },
    "devDependencies": {
        "@types/countdown": "0.0.6",
        "@types/d3": "^5.7.2",
        "@types/escape-string-regexp": "^1.0.0",
        "@types/ini": "^1.3.30",
        "@types/jest": "^24.0.11",
        "@types/js-yaml": "^3.12.1",
        "@types/node": "^11.13.0",
        "@types/node-fetch": "^2.1.7",
        "@types/puppeteer": "^1.12.2",
        "@types/sinon": "^7.0.11",
        "@types/sqlite3": "^3.1.5",
        "@types/winston": "^2.4.4",
        "codecov": "^3.3.0",
        "jest": "^24.7.1",
        "sinon": "^7.3.1",
        "ts-jest": "^24.0.1",
        "ts-node": "^8.0.3",
        "tslint": "^5.15.0",
        "tslint-sonarts": "^1.9.0"
    },
    "license": "MIT"
}
