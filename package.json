{
    "name": "market-bot",
    "private": true,
    "author": "Jeroen Akkerman",
    "version": "2.3.0",
    "description": "A Discord bot for looking up EVE Online market prices",
    "repository": {
        "type": "git",
        "url": "https://github.com/Ionaru/MarketBot.git"
    },
    "scripts": {
        "clean": "npx rimraf -q dist",
        "build": "npm run clean && tsc --skipLibCheck --project tsconfig.json",
        "lint": "npm run lint:src && npm run lint:test",
        "lint:src": "tslint --project tsconfig.json -c tslint.json --format stylish",
        "lint:test": "tslint -c tslint.json src/**/*.spec.ts --format stylish",
        "pretest": "npm run lint",
        "test": "jest src",
        "posttest": "codecov -f coverage/*.json",
        "start": "npm run build && node dist/src/index.js",
        "start:ts": "TS_NODE_FILES=true node --require ts-node/register src/index.ts"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/*.spec.ts",
            "!dist/**/*"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "dependencies": {
        "@ionaru/array-utils": "^2.0.0",
        "@ionaru/configurator": "^2.0.0",
        "@ionaru/esi-service": "^3.2.2",
        "@ionaru/eve-utils": "^4.4.0",
        "@ionaru/format-number": "^2.0.0",
        "@sentry/node": "^5.9.0",
        "agentkeepalive": "^4.1.0",
        "axios": "^0.19.0",
        "countdown": "^2.6.0",
        "d3": "^5.12.0",
        "d3-node": "^2.2.0",
        "debug": "^4.1.1",
        "discord.js": "^11.5.1",
        "elastic-apm-node": "^3.1.0",
        "escape-string-regexp": "^2.0.0",
        "fuse.js": "^3.4.5",
        "moment": "^2.24.0",
        "puppeteer": "^2.0.0",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "^4.1.0",
        "typeorm": "^0.2.20"
    },
    "devDependencies": {
        "@types/countdown": "0.0.7",
        "@types/d3": "^5.7.2",
        "@types/debug": "^4.1.5",
        "@types/elastic-apm-node": "^2.7.0",
        "@types/escape-string-regexp": "^2.0.1",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.7",
        "@types/puppeteer": "^1.20.2",
        "@types/sqlite3": "^3.1.5",
        "codecov": "^3.6.5",
        "jest": "^24.9.0",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.5.2",
        "tslint": "^5.20.1",
        "tslint-sonarts": "^1.9.0",
        "typescript": "^3.7.2"
    },
    "license": "MIT"
}
