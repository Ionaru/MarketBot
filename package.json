{
    "name": "market-bot",
    "private": true,
    "author": "Jeroen Akkerman",
    "version": "2.3.0",
    "description": "A Discord bot for looking up EVE Online market prices",
    "repository": {
        "type": "git",
        "url": "https://github.com/Ionaru/MarketBot.git"
    },
    "scripts": {
        "clean": "npx rimraf -q dist",
        "build": "npm run clean && tsc --skipLibCheck --project tsconfig.json",
        "lint": "npm run lint:src && npm run lint:test",
        "lint:src": "tslint --project tsconfig.json -c tslint.json --format stylish",
        "lint:test": "tslint -c tslint.json src/**/*.spec.ts --format stylish",
        "pretest": "npm run lint",
        "test": "jest src",
        "posttest": "codecov -f coverage/*.json",
        "start": "npm run build && node dist/src/index.js",
        "start:ts": "TS_NODE_FILES=true node --require ts-node/register src/index.ts"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/*.spec.ts",
            "!dist/**/*"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "dependencies": {
        "@ionaru/array-utils": "^3.2.0",
        "@ionaru/configurator": "^3.0.0",
        "@ionaru/esi-service": "^4.0.0",
        "@ionaru/eve-utils": "^7.1.0",
        "@ionaru/format-number": "^3.0.1",
        "@sentry/node": "^5.19.2",
        "agentkeepalive": "^4.1.3",
        "axios": "^0.19.2",
        "countdown": "^2.6.0",
        "d3": "^5.16.0",
        "d3-node": "^2.2.2",
        "debug": "^4.1.1",
        "discord.js": "^12.2.0",
        "elastic-apm-node": "^3.6.1",
        "escape-string-regexp": "^4.0.0",
        "fuse.js": "^6.4.0",
        "moment": "^2.27.0",
        "puppeteer": "^5.1.0",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "^5.0.0",
        "typeorm": "^0.2.25"
    },
    "devDependencies": {
        "@types/countdown": "0.0.7",
        "@types/d3": "^5.7.2",
        "@types/debug": "^4.1.5",
        "@types/elastic-apm-node": "^2.7.0",
        "@types/escape-string-regexp": "^2.0.1",
        "@types/jest": "^26.0.4",
        "@types/node": "^14.0.23",
        "@types/puppeteer": "^3.0.1",
        "@types/sqlite3": "^3.1.6",
        "codecov": "^3.7.1",
        "jest": "^26.1.0",
        "ts-jest": "^26.1.3",
        "ts-node": "^8.10.2",
        "tslint": "^6.1.2",
        "tslint-sonarts": "^1.9.0",
        "typescript": "^3.9.7"
    },
    "license": "MIT"
}
