{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": false,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "lib": [
            "esnext"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es2021",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "files": [
        "src/modules.d.ts",
        "src/typings.d.ts",
        "src/index.ts"
    ]
}
